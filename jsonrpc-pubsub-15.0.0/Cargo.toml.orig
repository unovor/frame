[package]
authors = ["Parity Technologies <admin@parity.io>"]
description = "Publish-Subscribe extension for jsonrpc."
documentation = "https://docs.rs/jsonrpc-pubsub/"
edition = "2018"
homepage = "https://github.com/paritytech/jsonrpc"
keywords = ["jsonrpc", "json-rpc", "json", "rpc", "macros"]
license = "MIT"
name = "jsonrpc-pubsub"
repository = "https://github.com/paritytech/jsonrpc"
version = "15.0.0"

[dependencies]
log = "0.4"
parking_lot = "0.10.0"
jsonrpc-core = { version = "15.0", path = "../core" }
serde = "1.0"
rand = "0.7"

[dev-dependencies]
jsonrpc-tcp-server = { version = "15.0", path = "../tcp" }
futures = { version = "0.3", features = ["compat", "thread-pool"] }
lazy_static = "1.4"

[badges]
travis-ci = { repository = "paritytech/jsonrpc", branch = "master"}
